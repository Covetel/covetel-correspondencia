	function verificar() {
		$( "#dialog-confirm" ).dialog({
				resizable: false,
				height: 190,
				width: 500,
				modal: true,
				buttons: {
					"Cancelar": function() {
						$( this ).dialog( "close" );
					},
					"Guardar": function() {
						$("#frm_ingresar").submit();
						$( this ).dialog( "close" );
					}
				}
			});
	}


